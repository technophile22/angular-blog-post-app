<!------Create new post form-->
<head>
    <script src="https://cdn.ckeditor.com/4.16.1/standard/ckeditor.js"></script>
</head>

<div class="form-group">
    <label for="title">Title</label>
    <input type="text" value="<%= post.title %>" name="title" id="title" class="form-control" required/>
</div>

<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control" ><%= post.description %></textarea>
</div>

<div class="form-group">
    <label for="markdown">Content</label>
    <textarea required name="markdown" id="markdown" class="form-control" ><%= post.markdown %></textarea>
</div>

<div class="pb-4">
    
<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>

</div>
<script>
    CKEDITOR.replace( 'markdown' );
</script>